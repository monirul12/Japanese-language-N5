<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mymusic">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.sensor.compass"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/music"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".utility.splashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activitys.KanjiActivity"
            android:parentActivityName=".activitys.MainActivity" />
        <activity android:name=".activitys.GrammerActivity" />
        <activity
            android:name=".activitys.LessonActivity"
            android:parentActivityName=".activitys.LessonListActivity" />
        <activity android:name=".activitys.FeedbackActivity" />
        <activity
            android:name=".activitys.LessonListActivity"
            android:parentActivityName=".activitys.MainActivity" />
        <activity android:name=".activitys.MainActivity" />

        <activity android:name=".activitys.VocabularyActivity" />
        <activity android:name=".activitys.katakanaActivity" />
        <activity android:name=".activitys.alphabetScreenActivity" />
        <activity android:name=".activitys.liseningActivity" />
        <activity android:name=".activitys.KanjiCharacterActivity" />

    </application>

</manifest>