<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"

    >


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_View_Lisening"
        android:src="@drawable/music_icon"
        />

    <TextView
        android:id="@+id/textView_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/image_View_Lisening"
        android:layout_toRightOf="@+id/image_View_Lisening"
        android:text="Current music"
        android:textColor="@color/metarial_green"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_musicArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_View_Lisening"
        android:layout_alignLeft="@+id/textView_music"
        android:layout_alignStart="@+id/textView_music"
        android:text="Artist"
        android:textColor="@color/metarial_green"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/playMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textView_music"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="-9dp"
        android:layout_toLeftOf="@+id/stopMusic"
        android:layout_toStartOf="@+id/stopMusic"
        android:src="@drawable/play_icon" />

    <ImageView
        android:id="@+id/stopMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textView_music"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="-9dp"
        android:src="@drawable/stop_icon" />


</RelativeLayout>