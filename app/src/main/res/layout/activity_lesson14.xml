<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/background_color"
    android:gravity="center"
    tools:context=".lesson14Activity">


    <!-- first linear layout -->

    <LinearLayout
        android:gravity="center"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.cardview.widget.CardView
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:layout_margin="10dp"
            android:id="@+id/grammer14CardViewId"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:background="@drawable/circlebacgroundpurple"
                    android:padding="10dp"
                    android:src="@drawable/grammer_icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/metarial_deep_purple"
                    />

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/grammerName"
                    android:textStyle="bold"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:layout_margin="10dp"
            android:id="@+id/vocabulary14CardViewId"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:background="@drawable/circlebacgroundgreen"
                    android:padding="10dp"
                    android:src="@drawable/vocabulary_icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/metarial_green"

                    />

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/vocabularyName"
                    android:textStyle="bold"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- 2nd linear layout -->

    <LinearLayout
        android:gravity="center"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.cardview.widget.CardView
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:layout_margin="10dp"
            android:id="@+id/liseningCardViewId"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:background="@drawable/circlebacgroundblue"
                    android:padding="10dp"
                    android:src="@drawable/lisening_icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/metarial_blue"
                    />

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/liseningName"
                    android:textStyle="bold"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:layout_margin="10dp"
            android:id="@+id/kanji14CardViewId"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:background="@drawable/circlebackgrounpink"
                    android:padding="10dp"
                    android:src="@drawable/kanji_icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/metarial_pink"

                    />

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/kanjiName"
                    android:textStyle="bold"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>