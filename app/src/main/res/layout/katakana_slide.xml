<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_weight="5"
    android:layout_height="match_parent"
    android:id="@+id/katakanaSlideLinearLayout"
    >

    <LinearLayout
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:paddingTop="10dp"
            android:text="kana"
            android:textSize="150sp"
            android:textAlignment="center"
            android:id="@+id/katakanaSlideHeadlineId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:background="@color/metarial_deep_purple"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/kanaPronounciationTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pronounciation here"
            android:gravity="center"
            android:textSize="40sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_weight=".5"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/katakanaSlideTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Title here"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/katakanaSlideTextDescriptionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description Here"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />


    </LinearLayout>


</LinearLayout>